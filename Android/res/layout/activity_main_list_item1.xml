<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF6F6F6"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/main_list_item1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_list_item1_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/txt_empty"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/main_list_item1_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:lines="1"
            android:text="@string/txt_hahah"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_list_item2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_list_item2_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/txt_empty"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/main_list_item2_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:lines="1"
            android:text="@string/txt_hahah"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>