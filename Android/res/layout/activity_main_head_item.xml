<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_head_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/main_head_item_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/app_icon"
        android:contentDescription="@string/txt_empty"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/main_head_item_txt"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/main_head_item_img"
        android:text="@string/txt_hahah"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>